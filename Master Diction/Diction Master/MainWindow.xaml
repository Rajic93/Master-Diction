<Window x:Class="Diction_Master___Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diction_Master___Library"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024" MinHeight="768" MinWidth="1024" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <WrapPanel Height="32" Margin="0,706,-0.4,0" Width="1018" Background="CornflowerBlue"/>
        <Button x:Name="Back" BorderThickness="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" Background="{x:Null}" Margin="10,10,0,0" Click="Back_OnClick" IsEnabled="False">
            <StackPanel>
                <Image Source="Resources/previous.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="Next" BorderThickness="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="40" Height="40" Background="{x:Null}" Margin="55,10,0,0" Click="Next_OnClick" IsEnabled="False">
            <StackPanel>
                <Image Source="Resources/next.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="Loggin" BorderThickness="0" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="40" Height="40" Background="{x:Null}" Margin="0,10,54.6,0" Click="Loggin_OnClick">
            <StackPanel>
                <Image Source="Resources/login.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="Loggout" Visibility="Hidden" BorderThickness="0" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="40" Height="40" Background="{x:Null}" Margin="0,10,9.6,0" Click="Loggout_OnClick">
            <StackPanel>
                <Image Source="Resources/logout.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="RegisterUser" BorderThickness="0" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="40" Height="40" Background="{x:Null}" Margin="0,10,9.6,0" Click="RegisterUser_OnClick">
            <StackPanel>
                <Image Source="Resources/register.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="Properties" BorderThickness="0" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="40" Height="40" Background="{x:Null}" Margin="0,10,877.6,0" Click="Properties_OnClick">
            <StackPanel>
                <Image Source="Resources/properties.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="CheckForUpdates" BorderThickness="0" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="40" Height="40" Background="{x:Null}" Margin="0,10,832.6,0" Click="CheckForUpdates_OnClick">
            <StackPanel>
                <Image Source="Resources/download.png"/>
            </StackPanel>
        </Button>
        <Grid x:Name="Panel" Margin="0,60,4.6,32.4"/>
        <TextBlock x:Name="Notification" HorizontalAlignment="Left" Margin="805,711,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="200" MouseUp="Notification_MouseUp"/>
    </Grid>
</Window>



