<UserControl x:Class="Diction_Master___Library.UserControls.DropDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diction_Master___Library.UserControls"
             mc:Ignorable="d" 
             Width="300" MinHeight="25">
    <Grid>
        <WrapPanel Height="20" Margin="3,3,3,0" VerticalAlignment="Top">
            <Image x:Name="image" Height="18" Width="18" Margin="1" Source="../Resources/down.png" MouseUp="Image_OnMouseUp"/>
            <TextBlock x:Name="Title" TextWrapping="Wrap" Text="Title" Width="274"/>
        </WrapPanel>
        <WrapPanel x:Name="Content" HorizontalAlignment="Left" Height="157" Margin="3,23,0,0" VerticalAlignment="Top" Width="294" Visibility="Collapsed"/>

    </Grid>
</UserControl>
