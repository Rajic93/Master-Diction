             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diction_Master.UserControls"
             mc:Ignorable="d" 
             MinHeight="300" MinWidth="300" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
    <Grid>
        <TextBlock x:Name="QuestionText" Margin="10,10,11,180" TextWrapping="Wrap" Text=""/>
        <TextBox x:Name="Answer" Margin="10,125,11,35" TextWrapping="Wrap" Text=""/>
